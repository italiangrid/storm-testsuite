#!/usr/bin/python

__author__ = 'Elisabetta Ronchieri'

import sys
import getopt
from tstorm.utils import map_test_id as mti

def usage():
    print "Usage: tstorm-test-id"

if __name__ == '__main__':
    try:
        opts, args = getopt.getopt(sys.argv[1:], "h", ["help"])
    except getopt.GetoptError, err:
        print str(err)
        usage()
        sys.exit(2)

    for o, v in opts:
        if o in ("-h", "--help"):
            usage()
            sys.exit()

    tests_suites = mti.MapTestId().create_map_test_id()
